vbell off
startup_message off
escape ^z^z
bind z
defscrollback 2000
ignorecase on
cjkwidth off

# show current command in title
#shelltitle "$|bash"
# in ~/.bashrc
#   PROMPT_COMMAND='printf "\033k\033\134A"'

bind k
bind K
bind ^k
bind .
bind ^\
bind \\
bind ^c
bind ^h
#bind h help
bind h focus left
bind l focus right
bind j focus down
bind k focus up
bind t focus top
bind b focus bottom
bind o focus
# unbind (writebuf), (readbuf), (removebuf)
bind >
bind <
bind =

caption always "%?%F%{.G}%:%{.K}%?%{!rr}%-Lw%{!rr}%n%f %t%{!rr}%+Lw%? [%h]%?%?%F%=%H %Y-%m/%d %c%?%{-}"
#hardstatus alwayslastline "%{dy}%Lw%=%H %Y-%m-%d %c%{-}"
layout new 1
layout autosave on

# select a window by mouse click
mousetrack on

#term screen-256color

# start from window1 instead of window0
bind c screen 1
#bind ^c screen 1
bind 0 select 10
screen 1
