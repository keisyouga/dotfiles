vbell off
startup_message off
escape ^z^z
bind z
defscrollback 2000

# show current command in title
#shelltitle "$|bash"
# in ~/.bashrc
#   PROMPT_COMMAND='printf "\033k\033\134A"'

bind k
bind K
bind ^k
bind .
bind ^\
bind \\
bind ^c
bind ^h
bind h help
bind j focus down
bind k focus up
bind t focus top
bind b focus bottom

hardstatus alwayslastline "%{dy}%Lw%=%H %Y-%m-%d %c%{-}"
layout new 1
layout autosave on

#term screen-256color

# start from window1 instead of window0
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
