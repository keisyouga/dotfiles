;; "l" => "ん" "ン" "ﾝ"
;; "q" => "っ" "ッ" "ｯ"
(require "japanese.scm") 
(set! ja-rk-rule-basic
      (filter (lambda (x)
                (not (or (equal? (caaar x) "l") (equal? (caaar x) "q"))))
              ja-rk-rule-basic))
(set! ja-rk-rule-basic
      (append '(((("l") . ()) ("ん" "ン" "ﾝ"))
                ((("q") . ()) ("っ" "ッ" "ｯ")))
              ja-rk-rule-basic)) 

(ja-rk-rule-update)

